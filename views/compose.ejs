
<%- include("partials/header"); -%>

<div class="compose-page-content-wrapper">
  <h1 class="compose">Compose</h1>

  <form class="compose-form" action="/compose" method="post">
    <label class="label-block" for="">Title</label>
    <input class="title-input" type="text" name="postTitle" autocomplete="off">
    <label class="label-block" for="">Post</label>
    <textarea class="post-input" name="postBody"></textarea>
    <button class="btn btn-post" type="submit" name="publish">Publish</button>
  </form>
</div>


